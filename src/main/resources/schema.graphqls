scalar Date

schema {
    query: Query
    mutation: Mutation
}

type Query{
    getImageById(id: ID!): Image
    findAllImages: [Image]
}

type Mutation{
    updateFilter(imageId: ID!, filterName: String!): Image
    updateImageInfo(id: ID!, name: String, location: String): Image
}

type Image{
    id: ID! # DynamoDB primary key
    name: String!
    location: String!
    time: Date! # uploadTime
    filter: Filter!
}

type Filter{
    name: String! # origin or name
    originalImageId: ID!
}